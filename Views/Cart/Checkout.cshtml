@model IEnumerable<Cart>

<div class="row">
    <div class="col-7">
        <form method="post">
            <div class="row mb-1">
                <label for="" class="col-2 form-label"> Full Name</label>
                <div class="col-10">
                    <input required type="text" class="form-control" name="fullname">
                </div>
            </div>
            <div class="row mb-1">
                <label for="" class="col-2 form-label">Email</label>
                <div class="col-10">
                    <input required type="text" class="form-control" name="email">
                </div>
            </div>
            <div class="row mb-1">
                <label for="" class="col-2 form-label"> Phone</label>
                <div class="col-10">
                    <input required type="text" class="form-control" name="phone">
                </div>
            </div>
            <div class="row mb-1">
                <label for="" class="col-2 form-label">Address</label>
                <div class="col-10">
                    <input required type="text" class="form-control" name="address">
                </div>
            </div>
            <div>
                <button class="btn btn-primary"> Confirm checkout </button>
            </div>

        </form>
    </div>
    <div class="col-5">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.ProductPrice</td>
                        <td>@item.ProductQuantity</td>
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">@Model.Sum(p => p.ProductPrice * p.ProductQuantity)</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>